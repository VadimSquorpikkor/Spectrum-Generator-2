<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="2dp"
    >

        <Switch
            android:id="@+id/mixer_item_switch"
            android:layout_margin="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

<!--
        <Button
            android:id="@+id/mixer_item_button"
            style="@style/add_new_button" />
-->

        <TextView
            android:id="@+id/mixer_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Source"
            android:layout_marginLeft="10dp"/>

        <SeekBar
            android:id="@+id/mixer_item_seek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="100"
            android:min="1"/>

        <TextView

            android:id="@+id/mixer_item_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:background="@android:color/transparent"
            />

        <ImageButton style="@style/delete_button"
            android:layout_marginLeft="3dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/mixer_item_delete"
            />

</LinearLayout>