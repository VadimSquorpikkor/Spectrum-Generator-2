<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_margin="3dp"
    android:padding="0dp">

    <FrameLayout style="@style/frame_style"
        android:elevation="25dp"
        android:id="@+id/fragment_container1">
    </FrameLayout>



    <FrameLayout style="@style/frame_style"
        android:id="@+id/fragment_container2">
    </FrameLayout>

    <LinearLayout style="@style/vertical_layout"
        android:layout_marginTop="2dp"
        android:elevation="10dp"
        android:background="@drawable/layout_shape_selector"
        android:padding="3dp"
        android:id="@+id/time_layout"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        >
        <LinearLayout style="@style/horizontal_layout"
            android:id="@+id/time_layout_small"

            >
            <TextView style="@style/base_match_wrap"
                android:gravity="right"
                android:text="Delay: "
                android:layout_weight="1"/>
            <TextView style="@style/base_match_wrap"
                android:gravity="center"
                android:id="@+id/delay_time_main"
                android:text="20"
                android:layout_weight="1"
                android:textSize="17sp"
                android:textColor="@color/colorOrange"/>

            <TextView style="@style/base_match_wrap"
                android:gravity="right"
                android:text="t набора: "
                android:layout_weight="1"/>
            <TextView style="@style/base_match_wrap"
                android:id="@+id/requiredTime"
                android:gravity="center"
                android:text="20"
                android:layout_weight="1"
                android:textSize="17sp"
                android:textColor="@color/colorOrange"/>

        </LinearLayout>

        <LinearLayout style="@style/vertical_layout"
            android:id="@+id/time_layout_big"
            android:elevation="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >

            <LinearLayout style="@style/horizontal_layout">


            </LinearLayout>

            <LinearLayout style="@style/vertical_layout">
                <TextView
                    style="@style/text_centered"
                    android:text="Время набора" />

                <EditText
                    android:id="@+id/dialog_required_time_text"
                    style="@style/text_centered"
                    android:layout_width="100dp"
                    android:digits="0123456789"
                    android:inputType="number"
                    android:maxLength="5"
                    android:text="100"
                    android:textColor="@color/colorOrange" />
            </LinearLayout>

            <LinearLayout style="@style/vertical_layout">
                <TextView
                    style="@style/text_centered"
                    android:text="Delay, ms" />

                <EditText
                    android:id="@+id/dialog_delay_text"
                    style="@style/text_centered"
                    android:layout_width="100dp"
                    android:digits="0123456789"
                    android:inputType="number"
                    android:maxLength="5"
                    android:text="100"
                    android:textColor="@color/colorOrange" />
            </LinearLayout>


            <SeekBar
                android:id="@+id/seekBar"
                android:max="1000"
                android:min="50"
                android:progress="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Switch
                android:id="@+id/switch1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Посекундный набор" />
<!--            <Button
                android:id="@+id/time_layout_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="40dp"
                android:paddingLeft="40dp"
                android:elevation="20dp"
                android:text="Задать"
                android:textSize="10sp"
                android:layout_gravity="center"/>-->
        </LinearLayout>
    </LinearLayout>

    <LinearLayout style="@style/horizontal_layout"
        android:id="@+id/button_layout">
        <Button style="@style/nice_button"
            android:elevation="10dp"
            android:id="@+id/open_ats"
            android:text="Загрузить спектр"
            android:layout_weight="4"/>
        <Button style="@style/nice_button"
            android:id="@+id/gen_button"
            android:text="Генератор"
            android:layout_weight="2"
            />
        <Button style="@style/nice_button"
            android:layout_marginRight="0dp"
            android:text="Mode"
            android:layout_weight="1"
            android:id="@+id/mode_button"
            />
    </LinearLayout>

</LinearLayout>