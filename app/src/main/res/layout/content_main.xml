    <LinearLayout
        android:id="@+id/mixer_fragment_list_view"
        style="@style/horizontal_layout">

        <FrameLayout
            android:id="@+id/mixer_fragment_list_view_small"
            style="@style/frame_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:elevation="15dp">

            <LinearLayout

                style="@style/horizontal_layout"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:padding="4dp"
                >

                <!--                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="1"
                                    android:text="Mixer"
                                    android:textColor="@color/colorOrange"
                                    android:textSize="18sp">

                                </TextView>-->

                <LinearLayout style="@style/horizontal_layout"
                    android:layout_weight="1"
                    android:minHeight="30dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="10dp"
                    android:padding="2dp"
                    android:background="@drawable/main_gradient"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/nuclide_stroke"
                        android:textSize="12sp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/colorOrange"
                        android:gravity="center_vertical"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/add_new_spectrum_2"
                    style="@style/horizontal_layout"
                    android:gravity="right"
                    android:padding="0dp"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="5dp"
                        android:text="Добавить спектр">

                    </TextView>

                    <ImageView
                        style="@style/add_new_button" />

                </LinearLayout>


            </LinearLayout>


        </FrameLayout>

        <FrameLayout
            android:id="@+id/mixer_fragment_list_view_big"
            style="@style/frame_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="15dp">

        </FrameLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/time_layout"
        style="@style/vertical_layout"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/my_shape"
        android:elevation="10dp"
        android:padding="3dp">

        <LinearLayout
            android:id="@+id/time_layout_small"
            style="@style/horizontal_layout"

            >

            <LinearLayout
                style="@style/horizontal_layout"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Время набора, с: " />

                <TextView
                    android:id="@+id/requiredTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:layout_marginStart="2dp"
                    android:textColor="@color/colorOrange"
                    android:textSize="17sp" />
            </LinearLayout>


            <LinearLayout
                style="@style/horizontal_layout"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Задержка, мс: " />

                <TextView
                    android:id="@+id/delay_time_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:layout_marginStart="2dp"
                    android:textColor="@color/colorOrange"
                    android:textSize="17sp" />
            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:id="@+id/time_layout_big"
            style="@style/vertical_layout"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:elevation="10dp">


            <!--
                        <LinearLayout
                            style="@style/horizontal_layout"
                            android:gravity="center">

                            <Button
                                android:id="@+id/hide_time_button"
                                style="@style/down_arrow" />
                        </LinearLayout>
            -->

            <LinearLayout style="@style/vertical_layout">
                <!--                <LinearLayout style="@style/horizontal_layout">
                                    <TextView
                                        style="@style/text_centered"
                                        android:text="Время набора:"
                                        />

                                </LinearLayout>-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/dialog_required_time_text"
                        style="@style/text_centered"
                        android:layout_width="40dp"
                        android:digits="0123456789"
                        android:inputType="number"
                        android:maxLength="5"
                        android:text="100"
                        android:padding="0dp"
                        android:background="@android:color/transparent"

                        android:textColor="@color/colorOrange" />
<!--                        android:selectAllOnFocus="true"-->

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:layout_gravity=""
                            >
                            <TextView android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="1"
                                android:textSize="10sp"
                                android:layout_weight="1"

                                />


                            <TextView android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="500"
                                android:textSize="10sp"
                                android:gravity="right"
                                android:layout_weight="1"
                                />

                        </LinearLayout>

                    <SeekBar
                        android:id="@+id/seekBar2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:max="501"
                        android:min="1" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Время набора, с" />

                </LinearLayout>


                <!--                <TextView
                                    style="@style/text_centered"
                                    android:text="Delay, ms:" />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/dialog_delay_text"
                        style="@style/text_centered"
                        android:layout_width="40dp"
                        android:digits="0123456789"
                        android:inputType="number"
                        android:maxLength="5"
                        android:text="100"
                        android:textColor="@color/colorOrange"
                        android:padding="0dp"
                        android:background="@android:color/transparent"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:layout_gravity=""
                            >
                            <TextView android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="1"
                                android:textSize="10sp"
                                android:layout_weight="1"

                                />


                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="1000"
                                android:textSize="10sp"
                                android:gravity="right"
                                android:layout_weight="1"
                                />

                        </LinearLayout>
                    <SeekBar
                        android:id="@+id/seekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:max="1001"
                        android:min="1" />

                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Задержка, мс" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                style="@style/horizontal_layout"
                android:gravity="center_vertical">

                <LinearLayout
                    android:id="@+id/hide_time_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView style="@style/exp_more_button" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="Свернуть" />

                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="Посекундный набор" />

                <Switch
                    android:id="@+id/switch1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:gravity="right" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_layout"
        style="@style/horizontal_layout"
        android:layout_margin="2dp"
        android:paddingTop="2dp">

        <Button
            android:id="@+id/gen_button"
            style="@style/nice_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="0dp"
            android:text="Генератор" />

    </LinearLayout>


</LinearLayout>